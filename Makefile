%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "$(RED)make clean..."
	@rm -f $(OBJ)
	@rm -f $(OBJS_BONUS)

fclean: clean
	@echo "$(RED)make fclean..."
	@rm -f $(NAME)
	@rm -f $(NAME_BONUS)

re: fclean all

bonus: $(OBJS_BONUS)
	@$(CC) $(OBJS_BONUS) $(CFLAGS) -o $(NAME_BONUS)
	@echo
	@echo "$(GREEN)██████╗  █████╗ ███╗  ██╗██╗   ██╗ ██████╗"
